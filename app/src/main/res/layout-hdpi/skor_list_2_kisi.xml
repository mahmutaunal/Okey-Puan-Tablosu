<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/scoreboard">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="@string/puanTablosu_title"
        android:textColor="?android:attr/textColorPrimary"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/oyuncu1SkorTablo_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/oyuncu1SkorTabloAd_textView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_light"
            android:text="@string/oyuncu1_text"
            android:textAlignment="textEnd"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="34sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:textSize="34sp"
            android:text="@string/cizgi_text"
            android:textColor="?android:attr/textColorPrimary"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/oyuncu1Skor_textView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/comfortaa_light"
            android:text="@string/skor_text"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="34sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/oyuncu2SkorTablo_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="160dp">

        <TextView
            android:id="@+id/oyuncu2SkorTabloAd_textView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_light"
            android:text="@string/oyuncu2_text"
            android:textAlignment="textEnd"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="34sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:text="@string/cizgi_text"
            android:textSize="34sp"
            android:textColor="?android:attr/textColorPrimary"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/oyuncu2Skor_textView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/comfortaa_light"
            android:text="@string/skor_text"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="34sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center_horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cup"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/kazananOyuncular_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/comfortaa_bold"
            android:text="@string/kazananOyuncu_text"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="49sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>