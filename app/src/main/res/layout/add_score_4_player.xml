<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/add_score">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/comfortaa"
            android:text="@string/add_score_title"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/addScore4Player_colors_radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/addScore4Player_noColor_radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/light_gray"
                    android:checked="true"
                    android:minHeight="48dp"
                    android:text="@string/noColor_text" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/addScore4Player_red_radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/red"
                    android:minHeight="48dp"
                    android:text="@string/red_text" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/addScore4Player_blue_radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/blue"
                    android:minHeight="48dp"
                    android:text="@string/blue_text" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/addScore4Player_yellow_radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/yellow"
                    android:minHeight="48dp"
                    android:text="@string/yellow_text" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/addScore4Player_black_radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black_color"
                    android:minHeight="48dp"
                    android:text="@string/black_text" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/addScore4Player_player1Name_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/comfortaa"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/player1_text"
                        android:textAlignment="textEnd"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/addScore4Player_player1Score_editTextLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="20dp"
                        android:hint="@string/score_editText"
                        android:importantForAutofill="no"
                        app:boxBackgroundColor="@color/edittext_color"
                        app:boxStrokeColor="@color/teal_200"
                        app:endIconMode="clear_text"
                        app:hintTextColor="@color/teal_200">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/addScore4Player_player1Score_editText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comfortaa"
                            android:inputType="numberSigned"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textColorHint="?android:attr/textColorPrimary"
                            tools:ignore="TextContrastCheck,TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/addScore4Player_player2Name_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/comfortaa"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/player2_text"
                        android:textAlignment="textEnd"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/addScore4Player_player2Score_editTextLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="20dp"
                        android:hint="@string/score_editText"
                        android:importantForAutofill="no"
                        app:boxBackgroundColor="@color/edittext_color"
                        app:boxStrokeColor="@color/teal_200"
                        app:endIconMode="clear_text"
                        app:hintTextColor="@color/teal_200">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/addScore4Player_player2Score_editText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comfortaa"
                            android:inputType="numberSigned"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textColorHint="?android:attr/textColorPrimary"
                            tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/addScore4Player_player3Name_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/comfortaa"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/player3_text"
                        android:textAlignment="textEnd"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/addScore4Player_player3Score_editTextLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="20dp"
                        android:hint="@string/score_editText"
                        android:importantForAutofill="no"
                        app:boxBackgroundColor="@color/edittext_color"
                        app:boxStrokeColor="@color/teal_200"
                        app:endIconMode="clear_text"
                        app:hintTextColor="@color/teal_200">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/addScore4Player_player3Score_editText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comfortaa"
                            android:inputType="numberSigned"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textColorHint="?android:attr/textColorPrimary"
                            tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/addScore4Player_player4Name_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/comfortaa"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/player4_text"
                        android:textAlignment="textEnd"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/addScore4Player_player4Score_editTextLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="20dp"
                        android:hint="@string/score_editText"
                        android:importantForAutofill="no"
                        app:boxBackgroundColor="@color/edittext_color"
                        app:boxStrokeColor="@color/teal_200"
                        app:endIconMode="clear_text"
                        app:hintTextColor="@color/teal_200">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/addScore4Player_player4Score_editText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comfortaa"
                            android:inputType="numberSigned"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textColorHint="?android:attr/textColorPrimary"
                            tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/addScore4Player_cross_linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/addScore4Player_crossPlayer1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="X"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/addScore4Player_crossPlayer2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="X"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/addScore4Player_crossPlayer3_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="X"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/addScore4Player_crossPlayer4_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="X"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/addScore4Player_multiply_linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/addScore4Player_multiplyPlayer1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="1"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/addScore4Player_multiplyPlayer2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="1"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/addScore4Player_multiplyPlayer3_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="1"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/addScore4Player_multiplyPlayer4_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="1"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>