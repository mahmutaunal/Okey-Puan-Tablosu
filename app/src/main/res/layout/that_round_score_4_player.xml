<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    app:cardCornerRadius="10dp">

    <TextView
        android:id="@+id/thatRoundScores4Player_roundNumber_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/comfortaa"
        android:text="@string/number_text"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="16sp"
        tools:ignore="VisualLintOverlap" />

    <TextView
        android:id="@+id/thatRoundScores4Player_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/comfortaa"
        android:text="-"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="16sp"
        tools:ignore="VisualLintOverlap" />

    <LinearLayout
        android:id="@+id/thatRoundScores4Player_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/thatRoundScores4Player_player1Score_text"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa"
            android:text="@string/zero_score_text"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/thatRoundScores4Player_player2Score_text"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/comfortaa"
            android:text="@string/zero_score_text"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/thatRoundScores4Player_player3Score_text"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/comfortaa"
            android:text="@string/zero_score_text"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/thatRoundScores4Player_player4Score_text"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/comfortaa"
            android:text="@string/zero_score_text"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/thatRoundScores4Player_roundColor_background"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="5dp"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

</androidx.cardview.widget.CardView>